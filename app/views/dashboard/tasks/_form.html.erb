<div class="container-fluid">
<div class="card">
  <div class="card-body">
  <div class="d-flex justify-content-between">
    <h5 class="card-title fw-semibold mb-4">New Task</h5>
  <div>
  <%= link_to "Back to tasks", dashboard_tasks_path, class: 'btn btn-light' %>
</div>
  </div>
  <div class="row">
   <div class="col-lg-6">
   <%= form_with(model: [:dashboard,task]) do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
      <%=error_message(task, :title)%>
    </div>
  
    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
      <%=error_message(task, :description)%>
    </div>
  
    <div class="mb-3">
      <%= form.label :due_date, class: 'form-label' %>
      <%= form.date_field :due_date, class: 'form-control' %>
      <%=error_message(task, :due_date)%>
    </div>
  
    <div class="mb-3">
      <%= form.label :status, class: 'form-label' %>
      <%= form.select :status, task_statuses_list, {selected: form.object.status, prompt: 'Select Status'}, class: 'form-select' %>
      <%=error_message(task, :status)%>
    </div>
  
    <div class="mb-3">
      <%= form.label :category, class: 'form-label' %>
      <%= form.text_field :category, class: 'form-control' %>
      <%=error_message(task, :category)%>
    </div>
  
    <div>
      <%= form.submit 'Create Task', class: 'btn btn-success' %>
    </div>
  <% end %>
   </div>
  </div>
  </div>
</div>
</div>