<!--  Main wrapper -->
<div class="container-fluid">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <!--  Row 1 -->
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-6 col-sm-6">
            <!-- Yearly Breakup -->
            <div class="card overflow-hidden">
              <div class="card-body p-4">
                <h5 class="card-title mb-10 fw-semibold">Total Projects</h5>
                <div class="row align-items-center">
                  <div class="col-12">
                    <h4 class="fw-semibold mb-3"><%=@total_projects%></h4>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6 col-sm-6">
            <!-- Monthly Earnings -->
            <div class="card">
              <div class="card-body p-4">
                <h5 class="card-title mb-10 fw-semibold">Total Tasks</h5>
                <div class="row align-items-center">
                  <div class="col-12">
                    <h4 class="fw-semibold mb-3"><%=@total_tasks%></h4>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
