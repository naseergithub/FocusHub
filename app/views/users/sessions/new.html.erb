<section class="section-lg contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-title">Login</h2>
            </div>
        </div>
        <div class="row contact-bg p-5 rounded mb-5">
            <div class="col-lg-7 mb-4 mb-lg-0 m-auto">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'text-center'}) do |f| %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-3', placeholder: "Your Email" %>
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control mb-3', placeholder: "Your Password" %>
                <%= f.submit "Log in", class: "btn btn-secondary" %>
                <p class="mt-4">Don't have an account? Click <%=link_to "here", new_user_registration_path %></p>
              <% end %>
              
            </div>
        </div>
    </div>
    <!-- background shapes -->
    <img class="contact-bg-1 up-down-animation" src="/assets/background-shape/feature-bg-2.png" alt="background-shape">
    <img class="contact-bg-2 left-right-animation" src="/assets/background-shape/green-half-cycle.png" alt="background-shape">
    <img class="contact-bg-3 up-down-animation" src="/assets/background-shape/green-dot.png" alt="background-shape">
    <img class="contact-bg-4 left-right-animation" src="/assets/background-shape/service-half-cycle.png" alt="background-shape">
    <img class="contact-bg-5 up-down-animation" src="/assets/background-shape/feature-bg-2.png" alt="background-shape">
</section>
